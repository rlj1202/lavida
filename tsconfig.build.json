{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "skipLibCheck": true,
    "esModuleInterop": true,

    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    "types": [],

    "jsx": "react",

    "noEmit": false,
    "noEmitOnError": true
  },
  "exclude": ["dist", "node_modules"]
}
